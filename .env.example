# Environment Configuration for Localhost
# Copy this file to .env and update with your settings

# Application Settings
NODE_ENV=development
PORT=5000

# Database Configuration
# Replace with your actual PostgreSQL connection string
# Format: postgresql://username:password@host:port/database
DATABASE_URL=postgresql://postgres:password@localhost:5432/student_management

# Session Configuration  
# Generate a secure random string for production
SESSION_SECRET=dev-secret-key-change-in-production

# Optional: Individual Database Connection Details
# (Only needed if not using DATABASE_URL)
PGHOST=localhost
PGPORT=5432
PGDATABASE=student_management
PGUSER=postgres
PGPASSWORD=password

# Optional: Application Settings
CORS_ORIGIN=http://localhost:5000
LOG_LEVEL=debug

# Example DATABASE_URL values for different setups:
# Local PostgreSQL: postgresql://postgres:password@localhost:5432/student_management
# Docker PostgreSQL: postgresql://student_user:student_pass@localhost:5433/student_management  
# Remote PostgreSQL: postgresql://username:password@your-server.com:5432/student_management